root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 60

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = double

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2 